{
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "elixir",
    "java",
    "reason",
    "ocaml"
  ],
  "coc.preferences.hoverTarget": "float",
  "codeLens.enable": true,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.errorSign": "‚ò†!",
  "diagnostic.hintSign": "üîç",
  "diagnostic.infoSign": "‚ìò ",
  "diagnostic.maxWindowHeight": 200,
  "elixir.pathToElixirLS": "~/.doom.d/elixir-ls/release/language_server.sh",
  "elixirLS.dialyzerEnabled": true,
  "flow.enable": true,
  "flow.useNPMPackagedFlow": true,
  "git.enableGutters": true,
  "json.format.enable": false,
  "list.extendedSearchMode": true,
  "python.jediEnabled": false,
  "suggest.timeout": 2000,
  "tsserver.enableJavascript": false,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    },
    "flow": {
      "command": "flow",
      "args": ["lsp"],
      "filetypes": ["javascript", "javascriptreact"],
      "initializationOptions": {},
      "requireRootPattern": true,
      "settings": {},
      "rootPatterns": [".flowconfig"]
    },
    "ocaml-lsp": {
      "command": "opam",
      "args": ["config", "exec", "--", "ocamllsp"],
      "filetypes": ["ocaml"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "haskell": {
      "command": "hie-wrapper",
      "args": ["--lsp"],
      "rootPatterns": ["stack.yaml", "cabal.config", "package.yaml"],
      "filetypes": ["hs", "lhs", "haskell"],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true,
          "formattingProvider": "floskell"
        }
      }
    }
  }
}
